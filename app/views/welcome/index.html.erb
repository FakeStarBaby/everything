<div data-role="page">
  <div data-role="header">
    <%= render 'layouts/page_title' %>
    <% unless current_user %>
      <%= link_to t('label.button.login'), '/auth/twitter', { :class => 'ui-btn-right', 'data-icon' => 'gear' } %>
    <% else %>
      <%= link_to t('label.button.logout'), signout_path, { :class => 'ui-btn-right', 'data-icon' => 'gear' } %>
    <% end %>
  </div>
  <div data-role="content">
    <p>Find me in app/views/welcome/index.html.erb</p>
  </div>
  <div data-role="footer">
    <%= render 'layouts/copyright' %>
  </div>
</div>
